<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_back_btn_normal"
                android:gravity="center_vertical"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvCommonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="5dip"
                android:text="营销中心"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tvCommonAssistant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:padding="5dip"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


        </RelativeLayout>


        <com.demo.mylibrary.View.NavigationTabBar
            android:id="@+id/ntb_sample_6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            app:ntb_corners_radius="0dp"
            app:ntb_preview_colors="@array/polluted_waves" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpMarketingCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <!--<FrameLayout-->
    <!--android:id="@+id/vpMarketingCenter"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--android:background="@drawable/one" />-->


</LinearLayout>