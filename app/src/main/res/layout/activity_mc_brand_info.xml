<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_btn_normal"
            android:gravity="center_vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvCommonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dip"
            android:text="优惠券详情"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/fabuyouhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/tvIssueNameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国庆促销券"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/tvReleaseTimeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布时间：2015-10-01 8:30:01"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTermInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用期限：2015-10-01至2015-10-07"
            android:textSize="20dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/result_view"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tvReleaseNumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布数量：1000份"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTotalAmountInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共计金额：50000元"
            android:textSize="20dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/result_view"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/tvReceiveNumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="领取人数：1000份"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTotalAmountInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共计金额：50000元"
            android:textSize="20dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/result_view"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/tvUseNumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用人数：900份"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTotalAmountInfo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共计金额：40000元"
            android:textSize="20dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/result_view"
            />
    </LinearLayout>

</LinearLayout>