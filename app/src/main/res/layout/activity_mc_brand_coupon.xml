<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_btn_normal"
            android:gravity="center_vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvCommonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dip"
            android:text="优惠券"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/fabuyouhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dip"
            android:text="发布优惠券"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlItemCoupon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_rect">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/tvMoneyItemCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="￥50"
                android:textSize="50dp"
                android:textColor="@color/app_red"

                />

            <TextView
                android:id="@+id/tvLimitItemCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="满500可用"
                android:textSize="20dp"

                />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivIconCoupon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_third"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tvShopNameCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意法优质女装A店旗舰店"
            android:layout_alignTop="@+id/ivIconCoupon"
            android:layout_toRightOf="@+id/ivIconCoupon"
            android:layout_toEndOf="@+id/ivIconCoupon"
            android:layout_marginLeft="3dp"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/tvIssueNameCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国庆促销代金券"
            android:textSize="25dp"
            android:layout_below="@+id/tvShopNameCoupon"
            android:layout_toRightOf="@+id/ivIconCoupon"
            android:layout_toEndOf="@+id/ivIconCoupon"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/tvTimeCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用期限2015-10-01至2015-10-10"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_below="@+id/tvIssueNameCoupon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/tvTimeStateCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tvTimeCoupon"
            android:layout_alignStart="@+id/tvTimeCoupon" />


    </RelativeLayout>


    <ListView
        android:id="@+id/lvCoupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>